    <PreferenceCategory
        android:key="global_wifi_settings"
        android:title="Wifi设置"
        android:summary="访问系统的Wifi设置">
        <PreferenceScreen
            android:key="wifi_settings"
            android:title="Wifi设置"
            android:summary="访问系统的Wifi设置">
            <intent
                android:action="action.intent.action.MAIN"
                android:targetPackage="com.android.settings"
                android:targetClass="com.android.settings.wifi.WifiSettings"
                />
        </PreferenceScreen>
    </PreferenceCategory>

