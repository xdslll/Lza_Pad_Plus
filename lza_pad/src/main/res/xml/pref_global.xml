<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="global_api_settings"
        android:title="接口设置"
        android:summary="设置接口地址、基本参数">
        <EditTextPreference
            android:title="接口地址"
            android:dialogTitle="请输入接口地址"
            android:hint="请输入接口地址"
            android:key="global_api_url"
            android:id="@+id/pref_global_api_url"
            />
        <EditTextPreference
            android:title="城市编号"
            android:dialogTitle="请输入城市编号"
            android:hint="请输入城市编号"
            android:key="global_api_city_code"
            android:id="@+id/pref_global_city_code"
            />
        <EditTextPreference
            android:title="学校编号"
            android:dialogTitle="请输入学校编号"
            android:hint="请输入学校编号"
            android:key="global_api_university_code"
            android:id="@+id/pref_global_university_code"
            />
        <EditTextPreference
            android:title="设备编号"
            android:dialogTitle="请输入设备编号"
            android:hint="请输入设备编号"
            android:key="global_api_device_code"
            android:id="@+id/pref_global_device_code"
            />
    </PreferenceCategory>
