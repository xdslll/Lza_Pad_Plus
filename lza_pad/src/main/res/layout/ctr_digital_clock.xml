<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            style="@style/DigitalClockPanelBackground">
            <TextView
                android:id="@+id/digital_clock_hour"
                style="@style/DigitalClockPanel"
                />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=":"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="60sp"
            android:textStyle="bold"
            />
        <FrameLayout
            style="@style/DigitalClockPanelBackground">
            <TextView
                android:id="@+id/digital_clock_minute"
                style="@style/DigitalClockPanel"
                />
        </FrameLayout>
    </LinearLayout>
    <ImageView
        style="@style/UniversalWrapContent"
        android:background="@drawable/header_analog_clock_bottom"
        />
</LinearLayout>