<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="205dp"
        android:id="@+id/ebook_content_img_cover"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/ebook_content_cover_bg"
        />
    <TextView
        android:id="@+id/ebook_content_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:gravity="center"
        android:layout_marginTop="10dip"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/ebook_content_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:gravity="center"
        android:layout_marginTop="10dip"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/ebook_content_book_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:gravity="center"
        android:layout_marginTop="10dip"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/ebook_content_book_pubdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:gravity="center"
        android:layout_marginTop="10dip"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/ebook_content_book_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:gravity="center"
        android:layout_marginTop="10dip"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ebook_content_top_seperate"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ebook_content_photo_bg"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ebook_content_two_dimensional_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:maxWidth="250dp"
            android:gravity="center"
            android:text="@string/ebook_content_take_photo"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ebook_content_bottom_seperate"
        />
    <ImageButton
        android:id="@+id/ebook_content_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ebook_content_btn_back"
        android:layout_marginTop="30dp"
        />
</LinearLayout>