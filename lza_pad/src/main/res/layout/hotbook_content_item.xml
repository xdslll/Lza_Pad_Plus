<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ebook_content_item_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ebook_content_item_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/ebook_content_book_name"
            android:id="@+id/ebook_content_item_title"
            />
        <ImageButton
            android:id="@+id/ebook_content_item_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ebook_content_expand_btn"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ebook_content_underline2"
        />
    <WebView
        android:id="@+id/ebook_content_item_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/ebook_content_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ebook_content_underline3"
        />
</LinearLayout>